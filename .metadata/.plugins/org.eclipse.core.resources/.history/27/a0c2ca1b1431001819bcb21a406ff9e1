<%
request.setCharacterEncoding("euc-kr");
	int idx = 1;
	String title = request.getParameter("title");
	String writer = request.getParameter("writer");
	String regdate = request.getParameter("date");
	String content = request.getParameter("content");
	int count = 1;
	
	if(title==null||title=="") 
		out.println("title is null");
	
	if(writer==null||writer=="")
		out.println("wirter is null");
	else if(!Pattern.matches("^[_0-9a-zA-Z-]+@[0-9a-zA-Z-]+(.[_0-9a-zA-Z-]+)*$",writer))
		out.println("not e-mail form");
	
	if(regdate==null||regdate=="")
		out.println("date is null");
	else if(!Pattern.matches("^[0-9]*$",regdate))
		out.println("not number form");
	
	if(content==""||content==null)
		out.println("content is null");
	
	try{
		String driverName = "oracle.jdbc.driver.OracleDriver";
		String url ="jdbc:oracle:thin:@localhost:1521:XE";
		
		Class.forName(driverName);
		Connection con = DriverManager.getConnection(url,"board","7465");
		out.println("success connecting to Oracle");
		
		Statement stmt = con.createStatement();
		String sql = "insert into board " +
					"(idx, title, writer, regdate, count, content )"+
					"values(" + 2 + " '"+title+"', '"+writer+"', '"+regdate+"', '1', '"+content+"' )";
		
		stmt.executeUpdate(sql);
		con.close();
	}catch(Exception e){
		out.println("Failed Connecting to Oracle");
		out.println(e.getMessage());
		e.printStackTrace();
	}
