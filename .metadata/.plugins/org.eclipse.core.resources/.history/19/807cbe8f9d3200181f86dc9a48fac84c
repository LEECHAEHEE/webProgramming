			<th>작성자</th>
			<th>날짜</th>
			<th>조회수</th>
		</tr>
		
		<c:forEach items="${articleList}" var="article">
			<tr>
				<td>${article.idx}</td>
				<td></td>                                                                                                                                                                                                                                                                                                                                                                                                                                      ,</a></td>
				<td>${article.writer}</td>
				<td>${article.regdate}</td>
				<td>${article.count}</td>
			</tr>
		</c:forEach>
	</table>
