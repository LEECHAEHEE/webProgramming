	String date = request.getParameter("date");
	String content = request.getParameter("content");
	int count = 1;
	
	if(title==null||title=="") 
		out.println("title is null");
	
	if(writer==null||writer=="")
		out.println("wirter is null");
	else if(!Pattern.matches("^[_0-9a-zA-Z-]+@[0-9a-zA-Z-]+(.[_0-9a-zA-Z-]+)*$",writer))
		out.println("not e-mail form");
	
	if(date==null||date=="")
		out.println("date is null");
	else if(!Pattern.matches("^[0-9]*$",date))
		out.println("not number form");
	
	if(content==""||content==null)
		out.println("content is null");
	
