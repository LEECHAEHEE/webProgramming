<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>게시판</title>
<script>
	function formCheck(){
		alert(document.forms[0].title.value);
		var title = document.forms[0].title.value;
		var writer = document.forms[0].writer.value;
		var content = document.forms[0].content.value;
		var date = document.forms[0].date.value;
		
		if(title==null||title==""){
			alert("input title");
			document.forms[0].title.focus();
			return false;
		}
		
		if(writer==null||writer==""){
			alert("input writer");
			document.forms[0].writer.focus();
			return false;
		}else if(writer.match(/^(\w+)@(\w+)[.](\w+)$/ig) == null){
			document.forms[0].writer.focus();
			return false;
		}
		
		if(date==null||date==""){
			alert("input date");
			document.forms[0].date.focus();
			return false;
		}else if(date.match(/^\d\d\d\d\d\d+$/ig)==null){
			alert("input number form");
			document.forms[0].date.focus();
			return false;
		})
		
		if(content==null||content==""){
			alert("input date");
			document.forms[0].content.focus();
			return false;
		}
	}
</script>
</head>
<body>
	<form action = "index.jsp" method="post" onsubmit="return formCheck();">
		title : <input type="text" name = "title"/><br/>
		writer :<input type ="text" name="writer"/><br/>
		date : <input type="text" name="date"/><br>
		content : <textarea rows="10"cols="20"name="content"></textarea>
		<input type="submit"/>
	</form>
</body>
</html>